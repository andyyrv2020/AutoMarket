<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutoMarket AI</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-1ycn6Icaqq40/Jf3p1QbW5y+5GkMA2y/8eOCiZxdDxaiu0SU1oBoqyl2QvZ6jIW3RDig0lzVEFQh2xZr60z2Q==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-layer">
    <header class="shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-dark bg-glass fixed-top">
            <div class="container-xl">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-car-side me-2 text-accent"></i>AutoMarket AI
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu" aria-controls="navMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navMenu">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CarListing" asp-action="Index">Listings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Map" asp-action="Index">Map</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Chat" asp-action="Index">Chat</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center gap-3">
                        <button class="btn btn-outline-accent d-flex align-items-center" id="themeToggle" type="button">
                            <span class="me-2" id="themeLabel">Switch Theme</span>
                            <span class="theme-icon">ðŸŒ™</span>
                        </button>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="page-shell">
        <main class="container-xl py-4">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-glass py-4 mt-auto">
        <div class="container-xl d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
            <span class="text-muted small">Â© 2025 AutoMarket AI. Intelligent car marketplace.</span>
            <div class="d-flex gap-3 small">
                <a asp-controller="Home" asp-action="Privacy" class="text-muted link-underline">Privacy</a>
                <a href="#" class="text-muted link-underline">About</a>
                <a href="#" class="text-muted link-underline">Contact</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
