@model IEnumerable<AutoMarket.Models.ChatMessage>
@{
    ViewData["Title"] = "Chat";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <p class="text-muted mb-1">SignalR chat</p>
        <h1 class="h4 fw-bold">Recent Messages</h1>
    </div>
    <a class="btn btn-outline-accent" asp-controller="CarListing" asp-action="Index">Back to listings</a>
</div>

<div class="card-modern p-3">
    <div class="vstack gap-3">
        @foreach (var msg in Model)
        {
            <div class="p-3 rounded-3" style="background: rgba(255,255,255,0.04);">
                <div class="d-flex justify-content-between align-items-center mb-1">
                    <strong>@msg.SenderId</strong>
                    <span class="text-muted small">@msg.Timestamp.ToString("g")</span>
                </div>
                <p class="mb-0 text-muted">@msg.Message</p>
            </div>
        }
    </div>
    <div class="mt-3">
        <button class="btn btn-primary"><i class="fa-solid fa-comments me-2"></i>Open chat modal</button>
        <span class="text-muted small ms-2">Chat UI styled and ready for SignalR.</span>
    </div>
</div>
